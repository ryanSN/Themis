{
  "name": "themis-bot",
  "version": "0.0.1",
  "description": "Simple bot for Discord app",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "test": "mocha",
    "test-cov":
      "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "coveralls": "./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "jsdoc": "jsdoc src -r -d docs -R README.md",
    "test:debug": "mocha --debug-brk",
    "format": "./node_modules/.bin/prettier --write src/**/*.js test/**/*.js",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ryanSN/Themis-bot.git"
  },
  "keywords": ["bot", "discord", "node"],
  "author": "Ryan Chatterton (ryanSN)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ryanSN/Themis-bot/issues"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "coveralls": "^3.0.0",
    "eslint": "^5.0.0",
    "husky": "^2.0.0",
    "husky": "^2.0.0",
    "istanbul": "^1.0.0-alpha.2",
    "lint-staged": "^8.0.0",
    "mocha": "^6.1.2",
    "mocha-lcov-reporter": "^1.3.0",
    "prettier": "1.16.1"
  },
  "dependencies": {
    "commander": "^2.15.0",
    "discord.js": "^11.3.2",
    "lodash": "^4.17.4",
    "rollbar": "^2.2.9",
    "rolldice": "^3.0.0"
  },
  "lint-staged": {
    "*.{js,json,css,md}": ["prettier --write", "git add"]
  }
}
